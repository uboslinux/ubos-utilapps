#
# Create a docroot user that can log in via ssh
#
# The ~docroot/.ssh/authorized_key file will be generated/updated by
# ubos-manifest.json
#

post_install() {
    perl -MUBOS::Utils -e 'UBOS::Utils::ensureOsUser( "docroot", undef, "rsync over ssh access for upload to docroot" );'
    true
}

post_upgrade() {
    post_install
}

post_remove() {
    # for security reasons, leave user and their data there
    true
}
